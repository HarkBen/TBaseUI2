<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mohei_tp"
        android:elevation="10dip"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <com.rg.function.customview.CustomDrawLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <FrameLayout
            android:id="@+id/asl_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/menu_top"></FrameLayout>

        <LinearLayout
            android:id="@+id/mymenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/testmodelblue"
            android:orientation="vertical">

            <Button
                android:id="@+id/menu_itema"
                android:text="Fragment-A"
                android:background="@drawable/btn_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/menu_itemb"
                android:text="Fragment-B"
                android:background="@drawable/btn_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.rg.function.customview.CustomDrawLayout>


</LinearLayout>